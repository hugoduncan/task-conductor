#kaocha/v1
 {:plugins [:hooks]
  :kaocha.hooks/pre-load [kaocha.hooks/pre-load]
  ;; Unit tests only (fast, no external deps): clj -M:test unit
  ;; Integration tests only (requires Claude CLI): clj -M:test integration
  ;; All tests: clj -M:test (or: clj -M:test unit integration)
  :tests [{:id           :unit
           :source-paths ["bases/agent-runner/src"
                          "components/claude-cli/src"
                          "components/dev-env/src"
                          "components/emacs-dev-env/src"
                          "components/mcp-tasks/src"
                          "components/pathom-graph/src"
                          "components/project/src"
                          "components/statechart-engine/src"]
           :test-paths   ["bases/agent-runner/test"
                          "components/claude-cli/test"
                          "components/dev-env/test"
                          "components/emacs-dev-env/test"
                          "components/mcp-tasks/test"
                          "components/pathom-graph/test"
                          "components/project/test"
                          "components/statechart-engine/test"]
           :skip-meta    [:integration]}
          {:id           :integration
           :source-paths ["components/claude-cli/src"]
           :test-paths   ["components/claude-cli/test"]
           :focus-meta   [:integration]}]}
